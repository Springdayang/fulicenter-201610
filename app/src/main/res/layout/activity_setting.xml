<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.ucai.fulicenter.controller.activity.SettingActivity">
   <include
       layout="@layout/common_head_title_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/btn_logout"
        android:layout_marginBottom="350dp"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/relaAvatar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/tvUserAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户头像"
                />
            <ImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_account"
                android:layout_toLeftOf="@+id/ivArrow1"
                />
            <ImageView
                android:id="@+id/ivArrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow_icon"
                />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tvUserRelative"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                />
            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="用户"
                android:layout_toLeftOf="@+id/ivArrow2"
                />
            <ImageView
                android:id="@+id/ivArrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow_icon"
                />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tvNickRelative"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/tvNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                />
            <TextView
                android:id="@+id/tvNick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_toLeftOf="@+id/ivArrow3"
                />
            <ImageView
                android:id="@+id/ivArrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow_icon"
                />
        </RelativeLayout>
        </LinearLayout>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange"
        android:text="LOGOUT"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
